<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".events.EventDetailsActivity">

    <TextView
        android:id="@+id/regevent_details_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00E60B0B"
        android:gravity="center"
        android:text="Loading event name..."
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/catamaran"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/regevent_details_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:background="#00E60B0B"
        android:gravity="center"
        android:text="Date: "
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:fontFamily="@font/catamaran"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regevent_details_header"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/regevent_details_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#00E60B0B"
        android:gravity="center"
        android:text="Time: "
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:fontFamily="@font/catamaran"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/regevent_details_text1"
        app:layout_constraintTop_toBottomOf="@+id/regevent_details_text1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/regevent_details_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#00E60B0B"
        android:gravity="center"
        android:text="Location: "
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:fontFamily="@font/catamaran"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/regevent_details_text2"
        app:layout_constraintTop_toBottomOf="@+id/regevent_details_text2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/regevent_details_textview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Loading date..."
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/regevent_details_text1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/regevent_details_text1"
        app:layout_constraintTop_toTopOf="@+id/regevent_details_text1" />

    <TextView
        android:id="@+id/regevent_details_textview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Loading time..."
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/regevent_details_text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/regevent_details_text2"
        app:layout_constraintTop_toTopOf="@+id/regevent_details_text2" />

    <TextView
        android:id="@+id/regevent_details_textview_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Student Center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/regevent_details_text3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/regevent_details_text3"
        app:layout_constraintTop_toTopOf="@+id/regevent_details_text3" />

    <ImageView
        android:id="@+id/regevent_details_img"
        android:layout_width="36dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/regevent_details_textview_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/regevent_details_textview_location"
        app:layout_constraintTop_toTopOf="@+id/regevent_details_textview_location"
        app:srcCompat="@mipmap/ic_location" />

    <Button
        android:id="@+id/regevent_details_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/colorAccent"
        android:text="Unregister"
        android:textColorHighlight="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regevent_details_text3"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>